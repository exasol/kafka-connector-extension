{
    "name": "kafka-connector-extension",
    "version": "0.0.0",
    "main": "dist/extension.js",
    "description": "Kafka connector extension",
    "license": "MIT",
    "scripts": {
        "build": "npm run generate && npm run compile",
        "compile": "tsc --build && esbuild dist/extension.js --bundle --outfile=dist/kafka-connector-extension.js --target=es6",
        "generate": "bash generate-description.sh",
        "lint": "eslint ./src/",
        "clean": "rm -rf dist/",
        "test": "jest --silent",
        "test-watch": "jest --watch"
    },
    "dependencies": {
        "@exasol/extension-manager-interface": "0.4.1"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/node": "^20.11.28",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "esbuild": "^0.20.2",
        "eslint": "^8.57.0",
        "jest": "29.7.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.2"
    }
}